<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/error_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/error_start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/error_end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/error_bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="16dp"/>

    <ImageView
            android:id="@+id/cake_error_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_constraintEnd_toEndOf="@id/error_end_guideline"
            app:layout_constraintStart_toStartOf="@id/error_start_guideline"
            app:layout_constraintTop_toTopOf="@id/error_top_guideline"
            android:contentDescription="@string/cake_error_image"
            android:tint="#999"
            android:src="@drawable/ic_error"/>

    <TextView
            android:id="@+id/cake_error_message"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/error_cake_list"
            android:textColor="#999"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/error_end_guideline"
            app:layout_constraintStart_toStartOf="@id/error_start_guideline"
            app:layout_constraintTop_toBottomOf="@id/cake_error_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>
