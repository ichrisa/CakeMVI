<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/empty_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/empty_start_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/empty_end_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/empty_bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="16dp"/>

    <ImageView
            android:id="@+id/cake_empty_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintEnd_toEndOf="@id/empty_end_guideline"
            app:layout_constraintStart_toStartOf="@id/empty_start_guideline"
            app:layout_constraintTop_toTopOf="@id/empty_top_guideline"
            android:contentDescription="@string/cake_empty_image"
            android:tint="#999"
            android:src="@drawable/ic_cake"/>

    <TextView
            android:id="@+id/cake_empty_message"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/empty_cake_list"
            android:textColor="#999"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/empty_end_guideline"
            app:layout_constraintStart_toStartOf="@id/empty_start_guideline"
            app:layout_constraintTop_toBottomOf="@id/cake_empty_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>
